<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="tag"
                type="String"/>
    </data>


    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tag"
                android:text="@{tag}"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/tag_backgraound_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_mini"
                android:layout_marginEnd="@dimen/layout_margin_mini"
                android:layout_marginBottom="@dimen/layout_margin_short"
                android:paddingStart="@dimen/layout_padding_short"
                android:paddingEnd="@dimen/layout_padding_short"
                android:paddingTop="@dimen/layout_padding_mini"
                android:paddingBottom="@dimen/layout_padding_mini"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="タグ サンプル"/>

    </android.support.constraint.ConstraintLayout>

</layout>
